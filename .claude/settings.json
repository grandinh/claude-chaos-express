{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "AskUserQuestion",
      "Bash",
      "BashOutput",
      "Edit",
      "ExitPlanMode",
      "Glob",
      "Grep",
      "KillShell",
      "LS",
      "MultiEdit",
      "Read",
      "Task",
      "TodoWrite",
      "WebFetch",
      "WebSearch",
      "Write"
    ],
    "deny": [
      "Bash(base64 -d | sh:*)",
      "Bash(brew install:*)",
      "Bash(cat /etc/passwd:*)",
      "Bash(cat ~/.ssh:*)",
      "Bash(chmod -R 777:*)",
      "Bash(chmod 777:*)",
      "Bash(crontab -r:*)",
      "Bash(curl :* | sh::*)",
      "Bash(dd if=:*)",
      "Bash(defaults write:*)",
      "Bash(find :* -name ':*.key'::*)",
      "Bash(format:*)",
      "Bash(gem install:*)",
      "Bash(git force:*)",
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(git reset --hard:*)",
      "Bash(grep -r password:*)",
      "Bash(halt:*)",
      "Bash(history | sh:*)",
      "Bash(kill -9:*)",
      "Bash(killall -9:*)",
      "Bash(launchctl load:*)",
      "Bash(logkeys:*)",
      "Bash(mkfs:*)",
      "Bash(nc -l:*)",
      "Bash(netcat -l:*)",
      "Bash(npm i -g:*)",
      "Bash(npm install -g:*)",
      "Bash(openssl:*)",
      "Bash(osascript:*)",
      "Bash(pfctl:*)",
      "Bash(pip install:*)",
      "Bash(pip install --trusted-host:*)",
      "Bash(python -m http.server:*)",
      "Bash(python3 -m http.server:*)",
      "Bash(reboot:*)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf .:*)",
      "Bash(rm -rf ~/*)",
      "Bash(rsync:*)",
      "Bash(scp:*)",
      "Bash(security dump-keychain:*)",
      "Bash(security export:*)",
      "Bash(security unlock-keychain:*)",
      "Bash(shutdown:*)",
      "Bash(ssh:*)",
      "Bash(su -:*)",
      "Bash(sudo -i:*)",
      "Bash(sudo chown -R:*)",
      "Bash(sudo launchctl:*)",
      "Bash(sudo passwd:*)",
      "Bash(sudo rm:*)",
      "Bash(sudo service:*)",
      "Bash(sudo systemctl:*)",
      "Bash(wget :* -O - | sh::*)",
      "Bash(yarn global add:*)",
      "Read(*.mobileprovision)",
      "Read(*.p12)",
      "Read(*.pem)",
      "Read(.env*)",
      "Read(.netrc)",
      "Read(AuthKey_*.p8)",
      "Read(fastlane/.env*)",
      "Read(~/.aws/*)",
      "Read(~/.docker/config.json)",
      "Read(~/.ssh/*)",
      "Read(~/Library/Keychains/*)",
      "Write(~/.aws/*)",
      "Write(~/.ssh/*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "node $CLAUDE_PROJECT_DIR/sessions/statusline.js",
    "padding": 0
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node $CLAUDE_PROJECT_DIR/sessions/hooks/user_messages.js"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/skill-activation-prompt.sh"
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run codebase-map"
          },
          {
            "type": "command",
            "command": "claudekit-hooks run thinking-level"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "node $CLAUDE_PROJECT_DIR/sessions/hooks/subagent_hooks.js"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit|Task|Bash|TodoWrite|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node $CLAUDE_PROJECT_DIR/sessions/hooks/sessions_enforce.js"
          }
        ]
      },
      {
        "matcher": "Read|Edit|MultiEdit|Write|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run file-guard"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node $CLAUDE_PROJECT_DIR/sessions/hooks/post_tool_use.js"
          }
        ]
      },
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "./Context/Scripts/AutoFormat.sh"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/post-tool-use-tracker.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run lint-changed"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run typecheck-changed"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run check-any-changed"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run test-changed"
          }
        ]
      },
      {
        "matcher": "Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run check-comment-replacement"
          }
        ]
      },
      {
        "matcher": "Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run check-unused-parameters"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup|clear",
        "hooks": [
          {
            "type": "command",
            "command": "node $CLAUDE_PROJECT_DIR/sessions/hooks/session_start.js"
          }
        ]
      },
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "./Context/Scripts/VersionStatus.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run typecheck-project"
          },
          {
            "type": "command",
            "command": "claudekit-hooks run lint-project"
          },
          {
            "type": "command",
            "command": "claudekit-hooks run test-project"
          },
          {
            "type": "command",
            "command": "claudekit-hooks run check-todos"
          },
          {
            "type": "command",
            "command": "claudekit-hooks run self-review"
          },
          {
            "type": "command",
            "command": "claudekit-hooks run create-checkpoint"
          }
        ]
      }
    ],
    "SubagentStop": []
  }
}